<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bycod.gunlukparahesapla.Para_ayir">

    <EditText
        android:id="@+id/Edittext_Ayir"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginBottom="2dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/buttonstyle"
        android:ems="10"
        android:gravity="center"
        android:inputType="textMultiLine"
        android:maxLength="50"
        android:shadowColor="#606060"
        android:shadowDx="10"
        android:shadowDy="4"
        android:shadowRadius="10"
        android:textSize="16dp"
        android:hint="@string/neicinparaayiracaksiniz"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/Button_Harca"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        android:textColor="#1b8bb2"
        />



    <Button
        android:id="@+id/Button_Harca"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/button_harca"
        android:shadowColor="#606060"
        android:shadowDx="10"
        android:shadowDy="4"
        android:shadowRadius="10"
        android:text="@string/aciklamagir"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintLeft_toRightOf="@+id/Edittext_Ayir"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="@+id/Edittext_Ayir"
        app:layout_constraintBottom_toBottomOf="@+id/Edittext_Ayir" />

    <TextView
        android:id="@+id/Textview_Para"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:shadowColor="#606060"
        android:shadowDx="10"
        android:shadowDy="4"
        android:shadowRadius="10"
        android:textColor="#404040"
        android:textSize="26dp"
        android:textStyle="bold"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/Button_Ileri" />

    <ListView
        android:id="@+id/Listview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="6dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:paddingTop="16dp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/Edittext_Ayir"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Textview_Para"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <Button
        android:id="@+id/Button_Ileri"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/next"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
